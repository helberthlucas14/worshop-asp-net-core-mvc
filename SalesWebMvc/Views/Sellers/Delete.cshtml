@model SalesWebMvc.Models.Seller
@{
    ViewData["Title"] = "Delete";
    ViewData["Page"] = "Sellers";
}


<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    @*<h1 class="m-0 text-dark">Dashboard</h1>*@
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Sellers" asp-action="Index">@ViewData["Page"]</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>

    <section class="content">
        <div class="container-fluid">
            <hr />
            <h2>@ViewData["Title"]</h2>

            <h3>Are your sure you want to delete this ?</h3>

            <div>
                <div class="card-body">
                    <div class="card-text">
                        <dl class="row">
                            <dt class="col-4">
                                @Html.DisplayNameFor(model => model.Name)
                            </dt>
                            <dd class="col-8">
                                @Html.DisplayFor(model => model.Name)
                            </dd>
                            <dt class="col-4">
                                @Html.DisplayNameFor(model => model.Email)
                            </dt>
                            <dd class="col-8">
                                @Html.DisplayFor(model => model.Email)
                            </dd>
                            <dt class="col-4">
                                @Html.DisplayNameFor(model => model.BirthDate)
                            </dt>
                            <dd class="col-8">
                                @Html.DisplayFor(model => model.BirthDate)
                            </dd>
                            <dt class="col-4">
                                @Html.DisplayNameFor(model => model.BaseSalary)
                            </dt>
                            <dd class="col-8">
                                @Html.DisplayFor(model => model.BaseSalary)
                            </dd>

                        </dl>
                    </div>
                </div>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Index">Back to List</a>
                </form>

            </div>
        </div>
    </section>
</div>

